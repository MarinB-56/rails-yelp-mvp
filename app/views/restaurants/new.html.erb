<h1>New restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to restaurants", restaurants_path, class: 'btn btn-primary my-3' %>

